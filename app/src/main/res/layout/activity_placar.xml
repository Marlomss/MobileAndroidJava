<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Placar"
    android:background="#1E201E">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="-16dp"
        tools:layout_editor_absoluteY="0dp"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#D1E9F6"
            android:text="Pontuação"
            android:textAlignment="center"
            android:textColor="#1F316F"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txvMensagem"
            android:layout_width="415dp"
            android:layout_height="273dp"
            android:textAlignment="center"
            android:textColor="#D1E9F6"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="match_parent"
            android:layout_height="112dp"
            android:background="#D1E9F6"
            android:text="Acertos"
            android:textAlignment="center"
            android:textColor="#1F316F"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/txvAcertos"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:textAlignment="center"
            android:textColor="#D1E9F6"
            android:textSize="34sp" />

        <Button
            android:id="@+id/btnTelaPrincipal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F316F"
            android:textColor="#D1E9F6"
            android:onClick="telaPrincipal"
            android:text="Tela Principal"
            />

        <Button
            android:id="@+id/btnTentarNovamente"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F316F"
            android:textColor="#D1E9F6"
            android:onClick="responderNovamente"
            android:text="Tentar Novamente" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>