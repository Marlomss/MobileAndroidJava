<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetimaTelaJogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1E201E"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Que país é esse?"
            android:textAlignment="center"
            android:textColor="#1F316F"
            android:background="#D1E9F6"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:srcCompat="@drawable/pais7" />

        <RadioGroup
            android:id="@+id/rbgRespostas7"
            android:layout_width="match_parent"
            android:layout_height="190dp">

            <RadioButton
                android:id="@+id/rbtResposta25"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Egito"
                android:textColor="#D1E9F6" />

            <RadioButton
                android:id="@+id/rbtResposta26"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Djibouti"
                android:textColor="#D1E9F6" />

            <RadioButton
                android:id="@+id/rbtResposta27"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tanzania"
                android:textColor="#D1E9F6" />

            <RadioButton
                android:id="@+id/rbtResposta28"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cabo Verde"
                android:textColor="#D1E9F6" />

        </RadioGroup>

        <Button
            android:id="@+id/btnResponder7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testaResposta"
            android:backgroundTint="#1F316F"
            android:text="Responder"
            android:textColor="#D1E9F6"
            android:enabled="false"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
