<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1E201E"
        android:fitsSystemWindows="true">


        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiz das Bandeiras"
            android:textAlignment="center"
            android:textColor="#1F316F"
            android:background="#D1E9F6"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="match_parent"
            android:layout_height="187dp"
            app:srcCompat="@drawable/minhaft" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="Marlomss"
            android:textAlignment="center"
            android:textColor="#D1E9F6" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dev"
            android:textAlignment="center"
            android:textColor="#D1E9F6" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="60dp" />

        <EditText
            android:id="@+id/edtNome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Digite seu nome"
            android:textColor="#D1E9F6"
            android:inputType="text" />

        <Button
            android:id="@+id/btnIniciaQuiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F316F"
            android:enabled="false"
            android:onClick="iniciaQuiz"
            android:text="Iniciar quiz"
            android:textColor="#D1E9F6" />

        <Button
            android:id="@+id/btnSair"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1F316F"
            android:onClick="fechar"
            android:text="sair"
            android:textColor="#D1E9F6" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>