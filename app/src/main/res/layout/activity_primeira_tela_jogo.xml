<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrimeiraTelaJogo">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#1E201E"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Que país é esse?"
            android:textAlignment="center"
            android:textColor="#1F316F"
            android:background="#D1E9F6"
            android:textSize="34sp" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="304dp"
            app:srcCompat="@drawable/pais1" />

        <RadioGroup
            android:id="@+id/rbgRespostas1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/rbtResposta1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D1E9F6"
                android:text="Camarões" />

            <RadioButton
                android:id="@+id/rbtResposta2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D1E9F6"
                android:text="Gâmbia" />

            <RadioButton
                android:id="@+id/rbtResposta3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D1E9F6"
                android:text="Angola" />

            <RadioButton
                android:id="@+id/rbtResposta4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D1E9F6"
                android:text="Africa do Sul" />
        </RadioGroup>

        <Button
            android:id="@+id/btnResponder1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="testaResposta"
            android:backgroundTint="#1F316F"
            android:text="Responder"
            android:textColor="#D1E9F6"
            android:enabled="false"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>